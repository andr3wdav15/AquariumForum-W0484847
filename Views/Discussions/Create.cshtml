@model AquariumForum.Models.Discussion

@{
    ViewData["Title"] = "Create Discussion";
}

<div class="container mt-4">
    @* breadcrumb nav *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Discussions</a></li>
            <li class="breadcrumb-item active">New Discussion</li>
        </ol>
    </nav>
    @* form for discussion post*@
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4">Create New Discussion</h2>
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Discussion Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter a descriptive title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Discussion Content</label>
                    <textarea asp-for="Content" class="form-control" rows="6"
                              placeholder="Share your thoughts..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ImageFile" class="form-label">Upload Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end align-items-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Create Discussion
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
