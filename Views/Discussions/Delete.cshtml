@model AquariumForum.Models.Discussion

@{
    ViewData["Title"] = "Delete Discussion";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Discussions" asp-action="Index">Discussions</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-body">
            <h1 class="display-6 mb-4">Delete Discussion</h1>

            <div class="alert alert-danger mb-4" role="alert">
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-exclamation-triangle-fill"></i> Warning
                </h4>
                <p class="mb-0">Are you sure you want to delete this discussion? This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Model?.Title</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Discussion ID</dt>
                                <dd class="col-sm-9">@Model?.DiscussionId</dd>

                                <dt class="col-sm-3">Content</dt>
                                <dd class="col-sm-9">@Model?.Content</dd>

                                <dt class="col-sm-3">Created On</dt>
                                <dd class="col-sm-9">@Model?.CreateDate.ToString("MMMM dd, yyyy HH:mm")</dd>

                                @if (!string.IsNullOrEmpty(Model?.ImageFilename))
                                {
                                    <dt class="col-sm-3">Image Name</dt>
                                    <dd class="col-sm-9">@Model.ImageFilename</dd>
                                }
                            </dl>
                        </div>
                        @if (!string.IsNullOrEmpty(Model?.ImageFilename))
                        {
                            <div class="col-md-4">
                                <img src="~/images/@Model.ImageFilename" alt="Discussion Image"
                                     class="card-img-top img-fluid" style="max-height: 200px; max-width: 200px; object-fit: contain;" />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="DiscussionId" />
                <div class="d-flex gap-2 justify-content-end">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete Discussion
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

